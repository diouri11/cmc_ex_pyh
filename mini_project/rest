					resturant
					
var
	dis_pizza, dis_Burger, dis_Salade, dis_Dessert, dis_Boisson ; entier 
	
	

const
	prix_Pizza   <-- 50
	prix_Burger  <-- 35 
	prix_Salade  <-- 20
	prix_Dessert <-- 15 
	prix_Boisson <-- 10



porcedure menu(dis_pizza, dis_Burger, dis_Salade, dis_Dessert, dis_Boisson )
	afficher ("1<-- Pizza  ", prix_Pizza , "dispo ", dis_pizza) 
	afficher ("2<-- Burger ", prix_Burger, "dispo ", dis_Burger)
	afficher ("3<-- Salade ", prix_Salade ,"dispo ", dis_Salade)  
	afficher ("4<-- Dessert", prix_Dessert,"dispo ", dis_Dessert)
	afficher ("5<-- Boisson", prix_Boisson,"dispo ", dis_Boisson) 
Fin_proc 

structure 
