precdure historique(var hist_name, var hist_comm , var his_table dispo , i) 	
 	
	j <-- 1 						  
 	
 		afficher ("entre le nom de client, si vous terminez entrez --FIN--")
		lire (hist_name[i])
		
		
		afficher ("num table") 
		lire (hist_comm[i])
		
		
		repeter
			
			afficher ("les commandes   , si vous avez terminez entrez -- 0 --  " )
			lire (A)				
			
			si A = 0 alors 	
				break;											
			Fin_si
			
			
			redim hist_comm[i][j]
			hist_comm[j][i] <-- A			// meme coll		
			
			
			gest_disp(var dispo ; A , dispo)
			
			
			j <-- j + 1
			Jusqu'a A = 0		
		
		i = i + 1
		  

Fin_Proc
 



  










